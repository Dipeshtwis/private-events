<div class="container">
  <div class="row mt-3">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h1 class="text-center">New User</h1>
      <%= form_for(:session, url: sign_in_path) do |f| %>
        <div class="form-group">
            <%= f.text_field :user, autofocus: true, placeholder: "Enter a username", class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit 'login', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
