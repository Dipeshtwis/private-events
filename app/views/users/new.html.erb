<div class="container">
  <div class="row mt-3">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h1 class="text-center">Create Account</h1>
      <%= form_for(@user) do |f| %>
        <div class="form-group">
            <%= f.text_field :name, autofocus: true, placeholder: "Enter your username", class: "form-control"  %>
        </div>
        <div class="actions">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
