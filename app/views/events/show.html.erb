<div class="row mt-4">
  <div class="col-md-5 mb-2 ml-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title border-bottom pb-2"><%= @event.name %><small class="float-right">Owner: <%= @event.creator.name  %> </small></h5>
        <p class="card-text"><%= @event.description %></p>
        <p><strong>Location: </strong><small class="card-text"><%= @event.location %></small></p>
        <p><strong>Date: </strong>
        <small class="card-text">
            <strong><%= @event.date.to_s.split(' ').first %> </strong>
            <em><%= @event.date.to_s.split(' ')[1] %></em>
        </small>
        </p>
      </div>
    </div>
  </div>

  <div class="col-md-3 mb-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title border-bottom pb-2">List of Attendees</h5>
        <% event_attendee(@event) %>
      </div>
    </div>
  </div>

  <div class="col-md-3 mb-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title pb-2">Invite Users</h5>
        <% alluser(@users) %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Back', :back %>
